//basic launch script
//expects fairings

clearscreen.
lock throttle to 1.
lock steering to heading(0,90).

run countdown.

stage.

wait until ship:velocity:surface:mag > 30.
print "starting roll program".
lock steering to heading(45,90).
wait 3.
lock steering to heading(90,90).

wait until ship:velocity:surface:mag > 100.
print "Starting turn".
lock steering to heading (90,80).
lock throttle to .9.


wait until ship:velocity:surface:mag >= 200.
print"pitching to 70".
lock steering to heading (90,70).
lock throttle to .8.

wait until ship:velocity:surface:mag >= 300.
print"pitching to 60".
lock steering to heading (90,60).

wait until ship:velocity:surface:mag >= 400.
print"pitching to 50".
lock steering to heading (90,50).

wait until ship:velocity:surface:mag >= 500.
print "pitching to 40".
lock steering to heading (90,40).

wait until ship:altitude >= 10000.
print "throttling back up".
lock throttle to 1.

wait until ship:velocity:surface:mag >= 900.
print "pitching to 30".
lock steering to heading (90,30).

wait until stage:liquidfuel < 1.
print "Fins on for stability".

wait until ship:altitude > 28000.
print "out of thick atmo".
stage.
wait 2.

print "burning for space".
stage.


wait until ship:apoapsis > 77000.
lock throttle to 0.
print "coasting to apo".

until ship:altitude > 48000{
print eta:apoapsis.
wait 1.
}

wait until ship:altitude >= 50000.
lock steering to prograde.
wait 15.
print "staging fairings".
stage.

until eta:apoapsis < 40{
print eta:apoapsis.
wait 1.
}

wait until eta:apoapsis <30.
lock steering to heading (90, 0).
wait 10.
print "firing engines for orbit".
lock throttle to 1.

//wait until periapsis > 60000.
//lock throttle to .8.
wait until periapsis > 72000.
lock throttle to 0.

set ship:control:pilotmainthrottle to 0.
print "Welcome to orbit".

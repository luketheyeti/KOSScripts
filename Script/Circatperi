//circularizes at peri
//uses flog function from tsto/asto
parameter Direction.


//Math
//orbital velocity at current peri beight
set TargetOrbVel to ship:body:radius * sqrt(9.8/(ship:body:radius + periapsis)).
//twr?
set DeltaA to maxthrust/mass.
//How fast you will be going when you reach your current peri
set periVelocity to sqrt(ship:body:mu * ((2/(ship:body:radius + periapsis))-(1/ship:obt:semimajoraxis))).
//DV
set DeltaV to (TargetOrbVel - periVelocity).
//burn time in seconds
set BurnTime to DeltaV / DeltaA.

print "peri: " + round(periapsis).

//print "Target Orb Vel: " + round(TargetOrbVel).
//print "Current Vel: " + round(ship:velocity:orbit:mag).
print "Diff: " + round(TargetOrbVel - ship:velocity:orbit:mag).

print "DeltaA: " + round(DeltaA).
print "Velocity at peri: " + round(periVelocity).
print "DV: " + round(DeltaV).

print "Burn Time (s): " + round(BurnTime).

//wait 15.

//clearscreen.

/////////

declare TargetOrb to round(Ship:periapsis).
print "target orb: " + TargetOrb.
print "time to peri: " + round(eta:periapsis).

//lock steering to prograde.
lock steering to heading (Direction,0).
//lock steering to Direction.
//set var to prograde
//lock steering to var.


until eta:periapsis <= (BurnTime / 2) + 5{
 clearscreen.
 Flog.
 print "time until peri: " + round(eta:periapsis).
 print "time until burn: " + round(eta:periapsis - (BurnTime / 2)).
 print "Burn Time (s): " + round(BurnTime).
 print "DV: " + round(DeltaV).
 print "peri: " + round(periapsis).
 //print "Diff: " + round(TargetOrbVel - ship:velocity:orbit:mag).
 //print "DeltaA: " + round(DeltaA).
 print "Velocity at peri: " + round(periVelocity).
 lock steering to heading (Direction,0).
 wait 1.
 
}

clearscreen.
lock steering to heading (Direction,0).
run countfrom(5).
lock throttle to 1.
print "burning".

//print "apo: " + round(ship:apoapsis).
//wait until periapsis >= (TargetOrb * .95).

until apoapsis >= (TargetOrb * .99) or (periapsis >= (TargetOrb * 105) and apoapsis >= max(80000,(TargetOrb * .95))){
 //wait until periapsis >= 72000.
 //wait BurnTime.
 //lock throttle to 0.
 clearscreen.
 Flog.
 print "apo: " + round(ship:apoapsis).
 print "tapo: " + TargetOrb.
 print "peri: " + round(ship:periapsis).
 print "tperi: " + round(TargetOrb * .99).
 print "DV: " + round(DeltaV).
 wait .1.
 
}

lock throttle to 0.

clearscreen.

print "welcome to orbit".

